<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:text="@string/derp_about_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_about_derp" />

            <TextView
                android:id="@+id/infoCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:text="@string/derp_about_summary"
                android:textAllCaps="true"
                android:textColor="@color/theme_accent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoSummary"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/derp_about_info_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/telegramTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:text="@string/derp_telegram_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/telegramSummary"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/derp_telegram_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/githubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:text="@string/derp_github_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/githubSummary"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/derp_github_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/teamCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="25dp"
                android:text="@string/derp_about_team"
                android:textAllCaps="true"
                android:textColor="@color/theme_accent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alexTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:text="@string/derp_about_alex"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/alexSummary"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/derp_about_alex_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/davidTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:text="@string/derp_about_david"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/davidSummary"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="@string/derp_about_david_summary"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
